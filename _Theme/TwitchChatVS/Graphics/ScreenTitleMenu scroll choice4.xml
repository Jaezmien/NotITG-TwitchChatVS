<ActorFrame><children>
	<Layer
		Font="_wendy small"
		Text="Connect"
		Var="tcvs_title_choice4"
		InitCommand="%function(self)
			self:settext(TwitchChatVS.isConnected() and 'Disconnect' or 'Connect')
			self:cmd('zoom,0.8;horizalign,center;shadowlength,0;diffusealpha,0;sleep,0.4;accelerate,0.6;diffusealpha,1')
		end"
		GainFocusCommand="@'diffuse,'..DifficultyColor(1)..';zoom,1'"
		LoseFocusCommand="zoom,0.8;diffuse,#FFFFFF"
		DisabledCommand="Diffuse,0.5,0.5,0.5,1"
		OffCommand="%TitleMenuOut"
	/>
	<Aux
		OnCommand="queuecommand,Update"
		UpdateCommand="%function(self)
			tcvs_title_choice4:settext(TwitchChatVS.isConnected() and 'Disconnect' or 'Connect')
			self:cmd('sleep,0.02;queuecommand,Update')
		end"
	/>
</children></ActorFrame>
